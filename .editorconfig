# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.css]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

[*.{js,mjs}]
indent_style = space
indent_size = 2

[*.json]
indent_style=space
indent_size = 4

[manifest.json]
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2
